<% if @active_conference %>
<div class="wrapper">    
    <div class="contentHeadline">
    	<span class="collumTopText">
      <%= (current_user.full_name + " :: ") if current_user.full_name%> Registration
    	</span>
    </div>
</div>
<div class="myWrapper">
	 Your registration status for the <%= @active_conference.title%> meeting is listed below.<br>			
			<table cellpadding="2" cellspacing="0" width="100%" style="border: 1px solid gray; font-size: 10px">	
				<tr class="<%= cycle('odd', 'even') %>">
					<td>Attending:</td>
					<td><%= @attend %> </td>					
				</tr>
				<tr class="<%= cycle('odd', 'even') %>">
					<td>Bring posters: </td>
					<td><%= @bringing_posters %> </td>
				</tr>

				<tr class="<%= cycle('odd', 'even') %>">
					<td>	Participating in the presentation competition </td>
					<td> <%=  @is_in_competition   %> </td>
				</tr>
				
				<tr class="<%= cycle('odd', 'even') %>">
					<td>	Your payment has been registred</td>
					<td> <%=  @payment_received.humanize   %> </td>
				</tr>

			</table>
			<br>
			
			<%= link_to('Edit your registration', edit_registration_path(@my_registration)) if @my_registration %> | <i> Last edit on <%= h @registration.updated_at.to_s(:article) %>  <br> </i>
			<br>			

			<p style="font-size: 11px "> <i> For submitting information about posters and presentation competition, please see the links under "Registration" on the sidebar.</i> </p>
			<br>
			<h2>Registration fee payment: </h2>
			<p style="font-size: 11px "> 
				The Participation fee is <b> DKK 250,- </b>, students <b> DKK: 150,- </b>
				<br> 
				Please pay the fee by bank transfer to Danske Bank: <br>
				<b> Reg. no: 3001 account no: 4115212125 </b> <br>
				
				Please refer to: 314000-12113-10-00000-3140002 + your name(s).<br>

				PLEASE NOTE: If payment is made later than October 29th, please bring a receipt.
																						
<% end %>
</div>





