<% content = @faq[sidebar_box] %>
<% unless hide_edit_links? && content.blank? %>
<div class="sidebar_box">
    <span class="header"><%= sidebar_box.humanize %></span>
    <% unless hide_edit_links? %>
      <span class="edit_link">
        <%= link_to "(edit)", :controller => "faq", :action => "edit" %>
      </span>
    <% end %>
    <br clear="all">
  <div class="faq_answer">
    <%= sanitize content %>
  </div>
</div>
<% end %>